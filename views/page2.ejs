<!DOCTYPE html>
<html lang="en">

<head>
    <%-include("header")-%>
    <link rel="stylesheet" href="style2.css">
    <title>Document</title>
</head>

<body>
    <nav class="navbar">
        <form action="/viewss" class="form-inline" method="post">
            <button class="btn  " name="button1" type="submit">Switch</button>

        </form>
    </nav>

    <div class="box" id="heading">
        <h1><%=Date%></h1>
        <p><%=Hours%> :<%=Minutes%> :<%=Seconds%></p>
    </div>

    <div class="box">
        <h3 style="text-align: center;">Items</h3>
        <%for(var i=0;i<items.length;i++){%>
        <div class="item">
            <input class="checkBox" type="checkbox">
            <p class="items"><%=items[i]%></p>
        </div>

        <%}%>
        <form class="item" action="/views2" method="post">
            <input  type="text" name="items" id="" placeholder="New Ttems" autocomplete="off">
            <button class="mybtn" type="submit">+</button>
        </form>

        <form class="item" action="/views2" method="post">
            <input class="deleteItems"  type="text" name="deleteditem" id="" placeholder="Delete Item" autocomplete="off">
            <button class="mybtn deleteButton" type="submit">-</button>
        </form>
    
</div>



<div  class="box">
    <h3 style="text-align: center;">Workout</h3>
    <%for(var i=0;i<workoutItem.length;i++){%>
        <div class="item">
            <input class="checkBox" type="checkbox">
            <p class="items"><%=workoutItem[i]%></p>
        </div>

        <%}%>
    <form class="item" action="/views2" method="post">
        <input  type="text" name="items" id="" placeholder="New Ttems" autocomplete="off">
        <button class="mybtn" type="submit">+</button>
    </form>

    <form class="item" action="/views2" method="post">
        <input class="deleteItems"  type="text" name="deleteworkout" id="" placeholder="Delete Item" autocomplete="off">
        <button class="mybtn deleteButton" type="submit">-</button>
    </form>

</div>


<%-include("footer")-%>
<script src="sketch2.js"></script>


</body>
</html>