              src="https://i.pinimg.com/originals/a2/c2/1c/a2c21cddcdffd7eb6c8259c06636299e.gif" alt="Card image cap">
            <div style="height:190px ;" class="card-body">
              <form action="/" method="post">
                <input placeholder="Add New Workout" type="text" name="workoutItem">
                <button type="submit" class="btn btn-success ButtonAdded">Add</button>
              </form>

              <form style="padding-top:15px;padding-left:17px;" action="/" method="post">
                <input placeholder="Delete Workout" type="text" name="deleteWorkout">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>



        <div class="col-sm-12 col-md-4">
          <div style="width: 100%; " class="card" style="width: 18rem;">
            <img style="height:200px" class="card-img-top " src="https://i.ytimg.com/vi/GMa1xbjdtHk/maxresdefault.jpg"
              alt="Card image cap">
            <div style="height:190px ;" class="card-body">
              <form action="/" method="post">
                <input placeholder="Add New Workout" type="text" name="newItem">
                <button type="submit" class="btn btn-success ButtonAdded">Add</button>
              </form>

              <form style="padding-top:15px;padding-left:17px;" action="/" method="post">
                <input placeholder="Delete Workout" type="text" name="deleteItem">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
